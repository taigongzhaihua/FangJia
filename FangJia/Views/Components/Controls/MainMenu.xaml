<base:BaseControl x:Class="FangJia.Views.Components.Controls.MainMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:base="clr-namespace:FangJia.Cores.Base" xmlns:controls="clr-namespace:FangJia.Views.Components.Controls"
             d:DataContext="{d:DesignInstance Type=controls:MainMenu}"
                  mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid>
        <Grid Grid.Column="0" Background="White" x:Name="ListGrid" >
            <!-- Items ListBox -->
            <ListBox x:Name="SidebarListBox"
                     Margin="5" BorderThickness="0"
                     ScrollViewer.VerticalScrollBarVisibility="Auto"
                     ItemsSource="{Binding MenuItems}"
                     SelectedValue=""
                     Width="48">
                <ListBox.ItemContainerStyle>
                    <Style TargetType="ListBoxItem">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="ListBoxItem">
                                    <Grid>
                                        <ToggleButton x:Name="MenuItem"
                                                      IsChecked="{Binding IsSelected, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                                      Command="{Binding Command}"
                                                      Width="{TemplateBinding ActualWidth}">
                                            <ToggleButton.Style>
                                                <Style TargetType="ToggleButton">
                                                    <Setter Property="Template">
                                                        <Setter.Value>
                                                            <ControlTemplate TargetType="ToggleButton">
                                                                <Border Background="{TemplateBinding Background}"
                                                                        Margin="0,5"
                                                                        Padding="5"
                                                                        CornerRadius="5" >
                                                                    <StackPanel Orientation="Horizontal">
                                                                        <TextBlock Text="{Binding Icon}"
                                                                            Foreground="{TemplateBinding Foreground}"
                                                                            FontSize="30" FontFamily="黑体"
                                                                            Width="{Binding  ActualHeight,RelativeSource={RelativeSource Self} }"
                                                                            Margin="0,0,10,0"
                                                                            TextAlignment="Center"
                                                                            VerticalAlignment="Center"
                                                                            />
                                                                        <TextBlock Text="{Binding Name}"
                                                                            Foreground="{TemplateBinding Foreground}"
                                                                            FontSize="16"
                                                                            Margin="0,0,10,0"
                                                                            VerticalAlignment="Center"
                                                                            />
                                                                    </StackPanel>
                                                                </Border>
                                                            </ControlTemplate>
                                                        </Setter.Value>
                                                    </Setter>
                                                </Style>
                                                
                                            </ToggleButton.Style>
                                        </ToggleButton>
                                        <VisualStateManager.VisualStateGroups>
                                            <VisualStateGroup x:Name="CommonStates">
                                                <!-- Normal State -->
                                                <VisualState x:Name="Normal" >
                                                    <Storyboard>
                                                        <ColorAnimation Storyboard.TargetName="MenuItem"
                                                                        Storyboard.TargetProperty="(MenuItem.Background).(SolidColorBrush.Color)"
                                                                        To="Transparent" Duration="0:0:0.3"/>
                                                        <ColorAnimation Storyboard.TargetName="MenuItem"
                                                                        Storyboard.TargetProperty="(MenuItem.Foreground).(SolidColorBrush.Color)"
                                                                        To="Black" Duration="0:0:0.3"/>
                                                    </Storyboard>
                                                </VisualState>
                                                <!-- MouseOver State -->
                                                <VisualState x:Name="MouseOver">
                                                    <Storyboard>
                                                        <ColorAnimation Storyboard.TargetName="MenuItem"
                                                        Storyboard.TargetProperty="(MenuItem.Background).(SolidColorBrush.Color)"
                                                        To="PowderBlue" Duration="0:0:0.3"/>
                                                        <ColorAnimation Storyboard.TargetName="MenuItem"
                                                                        Storyboard.TargetProperty="(MenuItem.Foreground).(SolidColorBrush.Color)"
                                                                        To="Teal" Duration="0:0:0.3"/>
                                                    </Storyboard>
                                                </VisualState>
                                                <!-- Pressed State -->
                                                <VisualState x:Name="Selected">
                                                    <Storyboard>
                                                        <ColorAnimation Storyboard.TargetName="MenuItem"
                                                        Storyboard.TargetProperty="(MenuItem.Background).(SolidColorBrush.Color)"
                                                        To="DodgerBlue" Duration="0:0:0.3"/>
                                                        <ColorAnimation Storyboard.TargetName="MenuItem"
                                                                        Storyboard.TargetProperty="(MenuItem.Foreground).(SolidColorBrush.Color)"
                                                                        To="White" Duration="0:0:0.3"/>
                                                    </Storyboard>
                                                </VisualState>
                                            </VisualStateGroup>
                                        </VisualStateManager.VisualStateGroups>
                                    </Grid>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </ListBox.ItemContainerStyle>
            </ListBox>
        </Grid>
    </Grid>
</base:BaseControl>
