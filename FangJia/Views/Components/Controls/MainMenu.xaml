<base:BaseControl x:Class="FangJia.Views.Components.Controls.MainMenu"
                  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                  xmlns:base="clr-namespace:FangJia.Cores.Base"
                  xmlns:converters="clr-namespace:FangJia.Cores.Utils.Converters"
                  mc:Ignorable="d"
                  d:DesignHeight="450" d:DesignWidth="800">

    <!-- 样式资源放在 BaseControl.Resources 中 -->
    <base:BaseControl.Resources>
        <!-- ToggleButton Style -->
        <Style x:Key="MenuToggleButtonStyle" TargetType="ToggleButton">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border Background="{TemplateBinding Background}"
                                Margin="0,5"
                                Padding="5"
                                CornerRadius="5">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="{Binding Icon}"
                                           Foreground="{TemplateBinding Foreground}"
                                           FontSize="30" FontFamily="{DynamicResource IconFont}"
                                           Width="{Binding ActualHeight, RelativeSource={RelativeSource Self}}"
                                           Margin="0,0,10,0"
                                           TextAlignment="Center"
                                           VerticalAlignment="Center" />
                                <TextBlock Text="{Binding Name}"
                                           Foreground="{TemplateBinding Foreground}"
                                           FontSize="16"
                                           Margin="0,0,10,0"
                                           VerticalAlignment="Center" />
                            </StackPanel>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ListBoxItem Style -->
        <converters:MainMenuListWidthConverter x:Key="MainMenuListWidthConverter" />
        <Style x:Key="SidebarListBoxItemStyle" TargetType="ListBoxItem">
            <EventSetter Event="MouseEnter" Handler="EventSetter_OnHandler"/>
            <EventSetter Event="MouseLeave" Handler="EventSetter_OnMouseLeave"></EventSetter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Grid>
                            <ToggleButton x:Name="MenuItem"
                                          IsChecked="{Binding IsSelected, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                          Command="{Binding Command}"
                                          Width="{Binding ActualWidth,ElementName=SidebarListBox,Converter={StaticResource MainMenuListWidthConverter}}"
                                          Style="{StaticResource MenuToggleButtonStyle}" 
                                          />
                            <VisualStateManager.VisualStateGroups>
                                <VisualStateGroup x:Name="CommonStates">
                                    <!-- Normal State -->
                                    <VisualState x:Name="Normal">
                                        <Storyboard>
                                            <ColorAnimation Storyboard.TargetName="MenuItem"
                                                            Storyboard.TargetProperty="(MenuItem.Background).(SolidColorBrush.Color)"
                                                            To="DodgerBlue" Duration="0:0:0.3" />
                                            <ColorAnimation Storyboard.TargetName="MenuItem"
                                                            Storyboard.TargetProperty="(MenuItem.Foreground).(SolidColorBrush.Color)"
                                                            To="Azure" Duration="0:0:0.3" />
                                        </Storyboard>
                                    </VisualState>
                                    <!-- MouseOver State -->
                                    <VisualState x:Name="MouseOver">
                                        <Storyboard>
                                            <ColorAnimation Storyboard.TargetName="MenuItem"
                                                            Storyboard.TargetProperty="(MenuItem.Background).(SolidColorBrush.Color)"
                                                            To="DeepSkyBlue" Duration="0:0:0.3" />
                                            <ColorAnimation Storyboard.TargetName="MenuItem"
                                                            Storyboard.TargetProperty="(MenuItem.Foreground).(SolidColorBrush.Color)"
                                                            To="AliceBlue" Duration="0:0:0.3" />
                                        </Storyboard>
                                    </VisualState>
                                    <!-- Selected State -->
                                    <VisualState x:Name="Selected">
                                        <Storyboard>
                                            <ColorAnimation Storyboard.TargetName="MenuItem"
                                                            Storyboard.TargetProperty="(MenuItem.Background).(SolidColorBrush.Color)"
                                                            To="Azure" Duration="0:0:0.3" />
                                            <ColorAnimation Storyboard.TargetName="MenuItem"
                                                            Storyboard.TargetProperty="(MenuItem.Foreground).(SolidColorBrush.Color)"
                                                            To="RoyalBlue" Duration="0:0:0.3" />
                                        </Storyboard>
                                    </VisualState>
                                </VisualStateGroup>
                            </VisualStateManager.VisualStateGroups>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style TargetType="Button" x:Key="OpenButtonStyle">
            <Setter Property="Foreground" Value="RoyalBlue"/>
            <Setter Property="Width" Value="30"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate>
                        <Grid>
                            <Border Background="{TemplateBinding Background}"
                                    Width="{TemplateBinding ActualWidth}"
                                    Height="{TemplateBinding ActualHeight}"
                                    CornerRadius="15" x:Name="Border"
                                    HorizontalAlignment="Center" VerticalAlignment="Center">
                                <TextBlock Text="&#xe63c;" Foreground="RoyalBlue"
                                           FontFamily="{DynamicResource IconFont}"
                                           FontSize="16" x:Name="TextBlock"
                                           VerticalAlignment="Center" HorizontalAlignment="Center"/>
                            </Border>
                            <VisualStateManager.VisualStateGroups>
                                <VisualStateGroup>
                                    <VisualState x:Name="Normal">
                                        <Storyboard>
                                            <ColorAnimation Storyboard.TargetName="Border"
                                                            Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                            Duration="0:0:0.2"
                                                            To="Azure"/>
                                            <ColorAnimation Storyboard.TargetName="TextBlock"
                                                            Storyboard.TargetProperty="(TextBlock.Foreground).(SolidColorBrush.Color)"
                                                            Duration="0:0:0.2"
                                                            To="RoyalBlue"/>
                                        </Storyboard>
                                    </VisualState>
                                    <VisualState x:Name="MouseOver">
                                        <Storyboard>
                                            <ColorAnimation Storyboard.TargetName="Border"
                                                            Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                            Duration="0:0:0.2"
                                                            To="LightCyan"/>
                                            <ColorAnimation Storyboard.TargetName="TextBlock"
                                                            Storyboard.TargetProperty="(TextBlock.Foreground).(SolidColorBrush.Color)"
                                                            Duration="0:0:0.2"
                                                            To="DodgerBlue"/>
                                        </Storyboard>
                                    </VisualState>
                                    <VisualState x:Name="Pressed">
                                        <Storyboard>
                                            <ColorAnimation Storyboard.TargetName="Border"
                                                            Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                            Duration="0:0:0.2"
                                                            To="DeepSkyBlue"/>
                                            <ColorAnimation Storyboard.TargetName="TextBlock"
                                                            Storyboard.TargetProperty="(TextBlock.Foreground).(SolidColorBrush.Color)"
                                                            Duration="0:0:0.2"
                                                            To="Azure"/>
                                        </Storyboard>
                                    </VisualState>
                                </VisualStateGroup>

                            </VisualStateManager.VisualStateGroups>
                        </Grid>
                        
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </base:BaseControl.Resources>

    <Grid Background="DodgerBlue">
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.Effect>
            <DropShadowEffect BlurRadius="15" ShadowDepth="0" Opacity="0.6"></DropShadowEffect>
        </Grid.Effect>
        <Grid Grid.Column="0" Grid.Row="1" x:Name="ListGrid">
            <!-- Items ListBox -->
            <ListBox x:Name="SidebarListBox"
                     Margin="5" BorderThickness="0"
                     ScrollViewer.VerticalScrollBarVisibility="Auto"
                     ItemsSource="{Binding MenuItems}"
                     Width="42" Background="Transparent"
                     SelectedIndex="0" SelectionMode="Single"
                     SelectionChanged="ListBox_SelectionChanged">
                <ListBox.ItemContainerStyle>
                    <StaticResource ResourceKey="SidebarListBoxItemStyle" />
                </ListBox.ItemContainerStyle>
            </ListBox>
        </Grid>
        <Button Grid.Row="0" Grid.Column="1" Grid.RowSpan="2"
                x:Name="Button"
                Margin="-5,0,-15,0"
                VerticalAlignment="Center"
                Click="Button_OnClick" Background="Azure"
                Style="{DynamicResource OpenButtonStyle}">
            <Button.RenderTransform>
                <RotateTransform Angle="0" CenterX="15" CenterY="15" />
            </Button.RenderTransform>
        </Button>
        <!-- 状态机 -->
        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup x:Name="OpenCloseStates">
                <!-- Open 状态 -->
                <VisualState x:Name="Open">
                    <Storyboard>
                        <DoubleAnimation Storyboard.TargetName="SidebarListBox"
                                         Storyboard.TargetProperty="Width"
                                         To="160" Duration="0:0:0.2"/>
                        <DoubleAnimation Storyboard.TargetName="Button"
                                         Storyboard.TargetProperty="RenderTransform.Angle"
                                         To="180" Duration="0:0:0.2" />
                    </Storyboard>
                </VisualState>

                <!-- Close 状态 -->
                <VisualState x:Name="Close">
                    <Storyboard>
                        <DoubleAnimation Storyboard.TargetName="SidebarListBox"
                                         Storyboard.TargetProperty="Width"
                                         To="42" Duration="0:0:0.2"/>
                        <DoubleAnimation Storyboard.TargetName="Button"
                                         Storyboard.TargetProperty="RenderTransform.Angle"
                                         To="0" Duration="0:0:0.2" />
                    </Storyboard>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>
    </Grid>
</base:BaseControl>

