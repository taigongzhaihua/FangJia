<base:BaseControl x:Class="FangJia.Views.Components.Controls.SettingItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:base="clr-namespace:FangJia.Cores.Base"
             mc:Ignorable="d" 
             MinHeight="55">
    <Grid x:Name="Grid">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="80"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <TextBlock x:Name="TitleBlock"
                   Grid.Column="0" Grid.Row="0" Grid.RowSpan="2"
                   VerticalAlignment="Center" HorizontalAlignment="Left" TextAlignment="Justify"
                   FontSize="14" FontWeight="DemiBold"/>
        
        <TextBlock x:Name="TipBlock" 
                   Grid.Row="1" Grid.Column="1"
                   FontSize="10"
                   Foreground="{DynamicResource WeakAccentForegroundBrush}"
                   />

    </Grid>
</base:BaseControl>
