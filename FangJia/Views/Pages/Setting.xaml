<Page x:Class="FangJia.Views.Pages.Setting"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FangJia.Views.Pages"
      xmlns:pageViewModels="clr-namespace:FangJia.ViewModels.PageViewModels"
      xmlns:controls="clr-namespace:FangJia.Views.Components.Controls"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Setting">
    <Page.DataContext>
        <pageViewModels:SettingViewModel/>
    </Page.DataContext>
    <Grid>
        <ScrollViewer>
            <ItemsControl ScrollViewer.CanContentScroll="True">
                <controls:SettingGroup />
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</Page>
