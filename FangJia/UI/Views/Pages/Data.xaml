<Page x:Class="FangJia.UI.Views.Pages.DataPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      mc:Ignorable="d"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="DataPage"
      KeepAlive ="False"
      >

    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <ListBox x:Name="TabList"
                 Grid.Column="0"
                 ItemsSource="{Binding TabItems,Mode=OneWay}"
                 SelectedIndex="{Binding TabSelectedIndex}"
                 BorderThickness="0"
                 BorderBrush="{DynamicResource ForegroundBrush}"
                 Padding="-1,20"
                 Margin="0"
                 Background="{DynamicResource BackgroundBrush}"
                 ClipToBounds="False"
                 SelectionChanged="ListBox_SelectionChanged">
            <ListBox.ItemContainerStyle>
                <StaticResource ResourceKey="DataTabListItemStyle" />
            </ListBox.ItemContainerStyle>
        </ListBox>
        <Frame x:Name="ContentFrame"
               Grid.Column="1" />
    </Grid>
</Page>