<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style TargetType="TextBlock" x:Key="DefaultText">
        <Setter Property="Foreground" Value="{StaticResource ForegroundBrush}"></Setter>
    </Style>
    <Style TargetType="TextBlock" x:Key="AlertText">
        <Setter Property="Foreground" Value="{StaticResource AlertBrush}"></Setter>
    </Style>
    <Style TargetType="TextBlock" x:Key="WarningText">
        <Setter Property="Foreground" Value="{StaticResource WarningBrush}"></Setter>
    </Style>
    <Style TargetType="TextBlock" x:Key="DangerText">
        <Setter Property="Foreground" Value="{StaticResource DangerBrush}"></Setter>
    </Style>

    <Style TargetType="TextBlock" x:Key="WeakAccentText">
        <Setter Property="Foreground" Value="{StaticResource WeakAccentForegroundBrush}"></Setter>
    </Style>
    <Style TargetType="TextBlock" x:Key="AccentText">
        <Setter Property="Foreground" Value="{StaticResource AccentForegroundBrush}"></Setter>
    </Style>

</ResourceDictionary>