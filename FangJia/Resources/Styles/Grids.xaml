<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!-- 主界面布局Style -->
    <Style TargetType="Grid" x:Key="MainGrid">
        <Setter Property="Background" Value="{StaticResource WindowBgBrush}" />
    </Style>

    <!-- 主菜单布局Style -->
    <Style TargetType="Grid" x:Key="MainMenuGrid">
        <Setter Property="Background" Value="{StaticResource AccentBrush}" />
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect BlurRadius="15" ShadowDepth="0" Opacity="0.6" Color="{StaticResource ShadowColor}" />
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
